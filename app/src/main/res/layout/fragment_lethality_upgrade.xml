<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/WholeScreenLinearLayout"
    android:weightSum="2"
    tools:context="roy.tablayoutwithviewpager.GameFragment">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="fill_parent"
        android:id="@+id/CircularLinearLayout"
        android:background="@drawable/border">
        <LinearLayout
            android:layout_width="@dimen/layout_width"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/horizontal_margin_2"
            android:layout_marginTop="@dimen/vertical_margin_2"
            android:layout_marginBottom="@dimen/vertical_margin_2">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight=".5"/>
            <Button
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:text="Desktop"
                android:background="@drawable/desktop"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size"
                android:id="@+id/DesktopButton"
                android:visibility="invisible"/>

            <Button
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:text="Work \nStations"
                android:textSize="@dimen/text_size"
                android:background="@drawable/workstation"
                android:textColor="@color/black"
                android:id="@+id/StationsButton"
                android:visibility="invisible"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight=".5"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/layout_width"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/vertical_margin_2"
            android:layout_marginBottom="@dimen/vertical_margin_2">
            <Button
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:text="Laptop"
                android:textSize="@dimen/text_size"
                android:textColor="@color/black"
                android:id="@+id/LaptopButton"
                android:background="@drawable/laptop"
                android:visibility="visible"/>
            <Button
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:text="Ultimate \nCivilian \nController"
                android:textColor="@color/black"
                android:id="@+id/UCCButton"
                android:textSize="@dimen/text_size"
                android:background="@drawable/optimised"
                android:visibility="invisible"/>
            <Button
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:text="Mobile \nPhones"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size"
                android:background="@drawable/flip_phone"
                android:id="@+id/MobilePhonesButton"
                android:visibility="invisible"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/layout_width"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/horizontal_margin_2"
            android:layout_marginTop="@dimen/vertical_margin_2"
            android:layout_marginBottom="@dimen/vertical_margin_2">
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight=".5"/>
            <Button
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:text="Tablets"
                android:textSize="@dimen/text_size"
                android:textColor="@color/black"
                android:background="@drawable/tablet"
                android:id="@+id/TablesButton"
                android:visibility="invisible"/>
            <Button
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:text="Smart \nPhones"
                android:textSize="@dimen/text_size"
                android:background="@drawable/smart_phone"
                android:textColor="@color/black"
                android:id="@+id/SmartPhonesButton"
                android:visibility="invisible"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight=".5"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="fill_parent"
        android:id="@+id/LaunchCodesLinearLayout"
        android:background="@drawable/border">

        <LinearLayout
            android:layout_width="@dimen/layout_width_2"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_alignParentLeft="true"
            android:id="@+id/firstcolumnLinearLayout"
            android:layout_marginLeft="@dimen/horizontal_margin_2"
            android:layout_marginTop="@dimen/vertical_margin_3"
            android:layout_marginBottom="@dimen/vertical_margin_3">
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight=".5"/>
            <Button
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:text="ROV"
                android:textSize="@dimen/text_size"
                android:id="@+id/RovButton"
                android:textColor="@color/black"
                android:background="@drawable/optimised"
                android:visibility="visible"/>
            <Button
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:text="Warsuits"
                android:textSize="@dimen/text_size"
                android:id="@+id/WarsuitsButton"
                android:textColor="@color/black"
                android:background="@drawable/war_machine"
                android:visibility="visible"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight=".5"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/layout_width_2"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/horizontal_margin_4"
            android:layout_marginTop="@dimen/vertical_margin_3"
            android:layout_marginBottom="@dimen/vertical_margin_3">
            <Button
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:text="Gov \nSatellites"
                android:textSize="@dimen/text_size"
                android:textColor="@color/black"
                android:id="@+id/GovernmentSatellitesButton"
                android:background="@drawable/govt_satellites"
                android:visibility="visible"/>
            <View
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="0dp"/>
            <Button
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:text="Drones"
                android:textSize="@dimen/text_size"
                android:textColor="@color/black"
                android:id="@+id/DronesButton"
                android:background="@drawable/optimised"
                android:visibility="visible"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/layout_width_2"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:id="@+id/MiddleLinearLayout"
            android:layout_marginTop="@dimen/vertical_margin_3"
            android:layout_marginBottom="@dimen/vertical_margin_3">
            <View
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="0dp"/>
            <Button
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:text="Launch \nCodes"
                android:textSize="@dimen/text_size"
                android:textColor="@color/black"
                android:id="@+id/LaunchCodesButton"
                android:background="@drawable/optimised"
                android:visibility="visible"/>
            <View
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="0dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/layout_width_2"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/lethality_margin"
            android:layout_marginTop="@dimen/vertical_margin_3"
            android:layout_marginBottom="@dimen/vertical_margin_3">
            <Button
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:text="Wifi \nScarammble"
                android:textSize="@dimen/text_size"
                android:textColor="@color/black"
                android:id="@+id/WifiScrammbleButton"
                android:background="@drawable/wifi_scrambler"
                android:visibility="visible"/>
            <View
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="0dp"/>
            <Button
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:text="Mainframes"
                android:textSize="@dimen/text_size"
                android:textColor="@color/black"
                android:id="@+id/Mainframe1Button"
                android:background="@drawable/optimised"
                android:visibility="visible"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/layout_width_2"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/horizontal_margin_2"
            android:id="@+id/fifthcolumnlinearlayout"
            android:layout_marginTop="@dimen/vertical_margin_3"
            android:layout_marginBottom="@dimen/vertical_margin_3">
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight=".5"/>
            <Button
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:text="Random \nReboots"
                android:textSize="@dimen/text_size"
                android:textColor="@color/black"
                android:background="@drawable/optimised"
                android:id="@+id/RandomRebootsButton"
                android:visibility="visible"/>
            <Button
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:text="Military \nServers"
                android:textSize="@dimen/text_size"
                android:background="@drawable/optimised"
                android:textColor="@color/black"
                android:id="@+id/ServersButton"
                android:visibility="visible"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight=".5"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
